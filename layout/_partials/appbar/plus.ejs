<%
var pageTitle = page.title || '';
if (is_home()) pageTitle = __('global.index');
if (is_archive()) pageTitle = __('global.archives');
if (is_tag()) pageTitle = page.tag;
if (is_category()) pageTitle = page.category;
if (is_year()) pageTitle = page.year;
if (page.path === 'search/index.html') pageTitle = __('search.text');
%>
<% // appbar for index, year, category, tag page
  if ((is_home() || is_year() || is_category() || is_tag()) && page.path !== 'search/index.html' && page.layout !== 'galleries' && page.layout !== 'gallery')
{ %>
  <div class="mdui-appbar mdui-appbar-fixed animate-appbar" id="blog-appbar">
    <div class="mdui-toolbar mdui-color-theme">
      <% if (is_home() || is_year() || is_month() || is_category() || is_tag()) { %>
        <button class="mdui-btn mdui-ripple mdui-btn-icon" mdui-drawer="{target: '#drawer'}">
          <i class="mdui-icon material-icons">&#xe5d2;</i>
        </button>
      <% } else { %>
        <button class="mdui-btn mdui-ripple mdui-btn-icon" back>
          <i class="mdui-icon material-icons">&#xe5c4;</i>
        </button>
      <% } %>
      <% if (theme.appbar.title) { %>
        <a href="<%= config.root %>" class="mdui-typo-headline">
          <%= theme.appbar.title %>
        </a>
        <span class="appbar-border-line mdui-hidden-xs"></span>
      <% } %>
      <span class="mdui-typo-title
      <% if (!is_category() && !is_tag() && !is_year()) { %>
        mdui-hidden-xs
      <% } %>"
      <% if (is_category() || is_tag() || is_year() || is_post()) { %>
        onclick="smoothScroll.animateScroll( 0 );"
      <% } %>>
        <%= pageTitle %>
      </span>
      <% if (theme.appbar.search === true) { %>
        <div class="search mdui-hidden-sm-down" onclick="window.open('<%= config.root + 'search' %>', '_self');">
          <div class="icon">
            <i class="mdui-icon material-icons">&#xe8b6;</i>
          </div>
          <div class="text">
            <%= __('search.text') %>
          </div>
        </div>
      <% } %>
      <div class="mdui-toolbar-spacer"
        <% if (is_category() || is_tag() || is_year() || is_post()) { %>
          onclick="smoothScroll.animateScroll( 0 );"
        <% } %>
      ></div>
      <% if (theme.appbar.search === true) { %>
        <a href="<%= config.root + 'search' %>" class="mdui-btn mdui-ripple mdui-btn-icon mdui-hidden-md-up search-button" target="_self"><i class="mdui-icon material-icons">&#xe8b6;</i></a>
      <% } %>
      <%- partial('../menu/index_more') %>
      <div class="appbar-userview mdui-valign" mdui-menu="{target: '#menu-userview', covered: false}">
        <img class="mdui-img-circle appbar-userview-avatar mdui-center" src="<%= theme.style.avatar %>"/>
      </div>
      <%- partial('../menu/userview') %>
      <% if (is_category() || is_tag() || is_year()) { %>
        <button class="mdui-btn mdui-ripple mdui-btn-icon style-fix"><i class="mdui-icon material-icons">&#xe80d;</i></button>
      <% } %>
    </div>
  </div>
<% // appbar in post and custom page
  } else if (!is_home() && !is_archive() && !is_year() && !is_month() && !is_category() && !is_tag() && page.path !== 'search/index.html' && page.layout !== 'galleries' && page.layout !== 'gallery')
{ %>
  <div class="mdui-appbar mdui-appbar-fixed animate-appbar" id="blog-appbar">
    <div class="mdui-toolbar mdui-color-theme">
      <button class="mdui-btn mdui-ripple mdui-btn-icon" mdui-drawer="{target: '#drawer'}">
        <i class="mdui-icon material-icons">&#xe5d2;</i>
      </button>
      <% if (theme.appbar.title) { %>
        <a href="<%= config.root %>" class="mdui-typo-headline">
          <%= theme.appbar.title %>
        </a>
      <% } %>
      <% if (theme.appbar.search === true) { %>
        <div class="search mdui-hidden-xs" onclick="window.open('<%= config.root + 'search' %>', '_self');">
          <div class="icon">
            <i class="mdui-icon material-icons">&#xe8b6;</i>
          </div>
          <div class="text">
            <%= __('search.text') %>
          </div>
        </div>
      <% } %>
      <div class="mdui-toolbar-spacer"></div>
      <% if (theme.appbar.search === true) { %>
        <a href="<%= config.root + 'search' %>" class="mdui-btn mdui-ripple mdui-btn-icon mdui-hidden-sm-up search-button" target="_self"><i class="mdui-icon material-icons">&#xe8b6;</i></a>
      <% } %>
      <%- partial('../menu/index_more') %>
      <div class="appbar-userview mdui-valign" mdui-menu="{target: '#menu-userview', covered: false}">
        <img class="mdui-img-circle appbar-userview-avatar mdui-center" src="<%= theme.style.avatar %>"/>
      </div>
      <%- partial('../menu/userview') %>
    </div>
  </div>
<% // appbar for archive page
  } else if (is_archive()  && page.path !== 'search/index.html')
{ %>
  <div class="mdui-appbar mdui-appbar-fixed animate-appbar" id="blog-appbar">
    <div class="mdui-toolbar mdui-color-theme">
      <button class="mdui-btn mdui-ripple mdui-btn-icon mdui-hidden-md-up" mdui-drawer="{target: '#drawer'}">
        <i class="mdui-icon material-icons">&#xe5d2;</i>
      </button>
      <button class="mdui-btn mdui-ripple mdui-btn-icon mdui-hidden-sm-down" back>
        <i class="mdui-icon material-icons">&#xe5c4;</i>
      </button>
      <% if (theme.appbar.title) { %>
        <a href="<%= config.root %>" class="mdui-typo-headline mdui-hidden-sm-down">
          <%= theme.appbar.title %>
        </a>
        <span class="appbar-border-line mdui-hidden-sm-down"></span>
      <% } %>
      <span class="mdui-typo-title"><%= config.author %></span>
      <% if (theme.appbar.search === true) { %>
        <div class="search mdui-hidden-sm-down" onclick="window.open('<%= config.root + 'search' %>', '_self');">
          <div class="icon">
            <i class="mdui-icon material-icons">&#xe8b6;</i>
          </div>
          <div class="text">
            <%= __('search.text') %>
          </div>
        </div>
      <% } %>
      <div class="mdui-toolbar-spacer"></div>
      <% if (theme.about_me === true) { %>
        <button class="mdui-btn mdui-btn-dense mdui-ripple mdui-hidden-md-up" mdui-dialog="{target: '#aboutmeDialog'}"><%= __('archive.about') %></button>
      <% } %>
      <%- partial('../menu/index_more') %>
      <div class="appbar-userview mdui-valign mdui-hidden-sm-down" mdui-menu="{target: '#menu-userview', covered: false}">
        <img class="mdui-img-circle appbar-userview-avatar mdui-center" src="<%= theme.style.avatar %>"/>
      </div>
      <%- partial('../menu/userview') %>
    </div>
  </div>
<% // appbar for search page
  } else if (page.path === 'search/index.html' && theme.appbar.search === true)
{ %>
  <div class="mdui-appbar mdui-appbar-fixed animate-appbar" id="blog-appbar">
    <div class="mdui-toolbar mdui-color-theme">
      <button class="mdui-btn mdui-ripple mdui-btn-icon" mdui-drawer="{target: '#drawer'}">
        <i class="mdui-icon material-icons">&#xe5d2;</i>
      </button>
      <% if (theme.appbar.title) { %>
        <a href="<%= config.root %>" class="mdui-typo-headline mdui-hidden-sm-down">
          <%= theme.appbar.title %>
        </a>
        <span class="appbar-border-line mdui-hidden-sm-down"></span>
      <% } %>
      <span class="mdui-typo-title mdui-hidden-sm-down"><%= __('search.explore') %></span>
      <div class="search" style="opacity: 1;">
        <div class="icon">
          <i class="mdui-icon material-icons">&#xe8b6;</i>
        </div>
        <div class="text">
          <input type="text" placeholder="<%= __('search.text') %>" id="search-input"/>
        </div>
      </div>
      <div class="mdui-toolbar-spacer"></div>
      <div class="appbar-userview mdui-valign mdui-hidden-xs" mdui-menu="{target: '#menu-userview', covered: false}">
        <img class="mdui-img-circle appbar-userview-avatar mdui-center" src="<%= theme.style.avatar %>"/>
      </div>
      <%- partial('../menu/userview') %>
    </div>
  </div>
<% // appbar for galleries and gallery
  } else if (page.layout === 'galleries' || page.layout === 'gallery')
{ %>
  <div class="mdui-appbar mdui-shadow-0 mdui-appbar-fixed animate-appbar <% if (page.layout === 'gallery') { %>gallery-fix<% } %>" id="blog-appbar" style="background-color: #303030">
    <div class="mdui-toolbar">
      <% if (page.layout === 'gallery') { %>
        <button class="mdui-btn mdui-ripple mdui-btn-icon" back>
          <i class="mdui-icon material-icons">&#xe5c4;</i>
        </button>
      <% } %>
      <a class="logo no-text-decoration mdui-hidden-sm-up" href="<%= config.root %>" target="_self">
        <img class="mdui-img-circle mdui-img-fluid mdui-center" src="<%= theme.head.high_res_favicon %>"/>
      </a>
      <a href="<%= config.root %>" target="_self" class="mdui-typo-headline mdui-hidden-xs">
        <%= theme.appbar.title %>
      </a>
      <span class="appbar-border-line mdui-hidden-xs"></span>
      <span class="mdui-typo-title"><%= page.title %></span>
      <div class="mdui-toolbar-spacer"></div>
      <%- partial('../menu/index_more') %>
      <%- partial('../menu/page_share') %>
      <% if (page.layout !== 'gallery') { %>
        <span class="appbar-border-line mdui-hidden-xs"></span>
        <div class="appbar-userview mdui-valign" mdui-menu="{target: '#menu-userview', covered: false}">
          <img class="mdui-img-circle appbar-userview-avatar mdui-center" src="<%= theme.style.avatar %>"/>
        </div>
        <%- partial('../menu/userview') %>
      <% } %>
    </div>
  </div>
<% } %>
